@model FormPatientModel;
@{
    ViewData["Title"] = "Register";
}



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
</div>
<div class="text-center col-md-8">
    
    
    <div class="alert-warning error-message display-only hidden" id="error-message-panal"></div>
    
    <form method="post" action="/Home/PatientSearch">
        <table class="twoColFormTable">
            <tr>
                <td>NHS Number:</td>
                <td>
                    <input type="number" id="NhsNumber" name="NhsNumber" asp-for="NhsNumber" class="form-control" autocomplete="off" /><br />
                    @Html.ValidationMessageFor(p => p.NhsNumber)
                </td>
            </tr>
            <tr>
                <td>Firstname:</td>
                <td>
                    <input id="FirstName" name="FirstName" asp-for="FirstName" class="form-control" autocomplete="off" /><br />
                    @Html.ValidationMessageFor(p => p.FirstName)
                </td>
            </tr>
            <tr>
                <td>Lastname:</td>
                <td>
                    <input id="LastName" name="LastName" asp-for="LastName" class="form-control" autocomplete="off" /><br />
                    @Html.ValidationMessageFor(p => p.LastName)
                </td>
            </tr>
            <tr>
                <td>Date of Birth:</td>
                <td><input name="Born" id="datePicker" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" asp-for="Born" placeholder="Select Date" /></td>
            </tr>
            <tr>
                <td></td>
                    <td><button type="submit" class="btn btn-success">Start Survey</button></td>
            </tr>
        </table>
    
    
 

    </form>


</div>

@section Scripts
    {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>


    <script>
        $('#datePicker').datepicker({
            format: 'dd/mm/yyyy'
        });


        $(document).ready(function(){
          $("span[class='field-validation-error']").each(function (index, element){
              $('#error-message-panal').append($(this).text());
              $('#error-message-panal').removeClass('hidden');
              window.setTimeout(function () {
                location.href = "../home/Index";
              }, 5000);
          })
        });
        

    </script>
}